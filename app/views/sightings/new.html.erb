<h1>New sighting</h1>

<% if @sighting.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @sighting.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/species/<%= @sighting.specie_id %>/sightings" method="post">
  <label for="sighting_date">Date</label>
  <input id="sighting_date" name="date" type="date" value="<%= @sighting.date %>">
   <label for="sighting_time">Time</label>
  <input id="sighting_time" name="time" type="time" value="<%= @sighting.time %>">
   <label for="sighting_location">Location</label>
  <input id="sighting_location" name="location" type="text" value="<%= @sighting.location %>">
  <button>Add sighting</button>
</form>
